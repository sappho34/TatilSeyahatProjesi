
<div class="content-form">
    <h3>Yorum Yapın</h3>
   
    <form method="post">
        <input type="hidden" placeholder="Blog ID" name="BlogId" value="@ViewBag.item" required />
        <input type="text" placeholder="Kullanıcı Adı" name="UserName" required />
        <input type="text" placeholder="Mail Adresi" name="UserEmail" required />
        <textarea placeholder="Yorum" name="Comments"></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>