@using TatilSeyahat.Models.Classes
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="right">
            <div class="bot-left">
                <img src="@x.BlogImage" alt="" style="width:400px;height:150px" />
            </div>
            <div class="left-text">
                <h4>@x.Title</h4>
                <span class="doller">@x.Date.ToString("dd.MM.yyyy")</span>

                <p>@x.Description.Substring(0,80)</p>
                <p><a href="/Blog/Details/@x.BlogId"><span class="read">Devamını oku>></span></a></p>
            </div>
        </div>
    }
</div>

